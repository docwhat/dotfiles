{
  "coc.preferences.codeLens.enable": true,
  "coc.preferences.formatOnType": true,
  "coc.preferences.hoverTarget": "preview",
  "coc.preferences.noselect": true,
  "coc.preferences.preferCompleteThanJumpPlaceholder": false,

  // CocList (fzf)
  "list.insertMappings": {
    "<C-t>": "action:tabe",
    "<C-n>": "normal:j",
    "<C-p>": "normal:k"
  },

  // Snippets
  "snippets.ultisnips.directories": ["UltiSnips", "snips"],
  "snippets.ultisnips.pythonVersion": 3,
  "coc.preferences.snippetIndicator": "\uf5d4",

  // Linting/Warnings
  "coc.preferences.diagnostic.displayByAle": true,
  "coc.preferences.diagnostic.errorSign": "",
  "coc.preferences.diagnostic.warningSign": "",
  "coc.preferences.diagnostic.infoSign": "",
  "coc.preferences.diagnostic.hintSign": "履",

  // Additional Language Servers
  "languageserver": {
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile", "Dockerfile"],
      "args": ["--stdio"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  }
}
