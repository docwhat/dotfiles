{
  "codeLens.enable": true,
  "coc.preferences.formatOnType": true,
  "coc.preferences.hoverTarget": "preview",

  "suggest.noselect": false,
  "suggest.preferCompleteThanJumpPlaceholder": false,
  "suggest.triggerAfterInsertEnter": true,
  "suggest.enablePreview": true,
  "suggest.snippetIndicator": "\uf5d4",

  // CocList (fzf)
  "list.insertMappings": {
    "<C-t>": "action:tabe",
    "<C-n>": "normal:j",
    "<C-p>": "normal:k"
  },

  // Snippets
  "snippets.ultisnips.directories": ["UltiSnips", "snips"],
  "snippets.ultisnips.pythonVersion": 3,

  // Type Script
  "tsserver.enableJavascript": false,

  // Linting/Warnings
  "diagnostic.displayByAle": true,
  "diagnostic.enable": true,
  "diagnostic.errorSign": "",
  "diagnostic.hintSign": "履",
  "diagnostic.infoSign": "",
  "diagnostic.warningSign": "",

  // Additional Language Servers
  "languageserver": {
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile", "Dockerfile"],
      "args": ["--stdio"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "flow": {
      "command": "flow",
      "args": ["lsp"],
      "filetypes": ["javascript", "javascriptreact"],
      "initializationOptions": {},
      "requireRootPattern": true,
      "settings": {},
      "rootPatterns": [".flowconfig"]
    },
    "golang": {
      "command": "/Users/docwhat/go/bin/bingo",
      "args": ["--diagnostics-style=instant"],
      "filetypes": ["go"],
      "initializationOptions": {},
      "trace.server": "verbose",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"]
    }
  }
}
