{
  "coc.preferences.formatOnType": true,
  "coc.preferences.extensionUpdateCheck": "daily",

  "suggest.triggerAfterInsertEnter": true,
  "suggest.autoTrigger": "always",
  "suggest.acceptSuggestionOnCommitCharacter": true,

  "suggest.noselect": true,
  "suggest.enablePreselect": false,
  "suggest.preferCompleteThanJumpPlaceholder": false,

  "suggest.floatEnable": true,
  "suggest.fixInsertedWord": true,

  "suggest.enablePreview": true,
  "suggest.snippetIndicator": " ✂️",

  // CocList (fzf)
  "list.insertMappings": {
    "<C-t>": "action:tabe",
    "<C-n>": "normal:j",
    "<C-p>": "normal:k"
  },

  // Snippets
  "snippets.ultisnips.directories": ["UltiSnips", "snips"],
  "snippets.ultisnips.pythonVersion": 3,

  // Type Script
  "tsserver.enableJavascript": false,

  // Code Lens
  "codeLens.enable": true,

  "Lua.diagnostics.disable": ["undefined-global"],

  // Linting/Warnings
  "diagnostic.virtualText": true,
  "diagnostic.displayByAle": false,
  "diagnostic.enable": true,
  "diagnostic.errorSign": "",
  "diagnostic.hintSign": "履",
  "diagnostic.infoSign": "",
  "diagnostic.warningSign": ""
}
