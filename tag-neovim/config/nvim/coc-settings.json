{
  "coc.preferences.formatOnType": true,
  "coc.preferences.extensionUpdateCheck": "daily",

  "suggest.triggerAfterInsertEnter": true,
  "suggest.autoTrigger": "always",
  "suggest.acceptSuggestionOnCommitCharacter": true,

  "suggest.noselect": true,
  "suggest.enablePreselect": false,
  "suggest.preferCompleteThanJumpPlaceholder": false,

  "suggest.floatEnable": true,
  "suggest.fixInsertedWord": true,

  "suggest.enablePreview": true,
  "suggest.snippetIndicator": " ✂️",

  "docker.enable": true,

  // CocList (fzf)
  "list.insertMappings": {
    "<C-t>": "action:tabe",
    "<C-n>": "normal:j",
    "<C-p>": "normal:k"
  },

  // Snippets
  "snippets.ultisnips.directories": ["UltiSnips", "snips"],
  "snippets.ultisnips.pythonVersion": 3,

  // Type Script
  "tsserver.enableJavascript": false,

  // Code Lens
  "codeLens.enable": true,

  // Linting/Warnings
  "diagnostic.virtualText": true,
  "diagnostic.displayByAle": false,
  "diagnostic.enable": true,
  "diagnostic.errorSign": "",
  "diagnostic.hintSign": "履",
  "diagnostic.infoSign": "",
  "diagnostic.warningSign": "",

  // Additional Language Servers
  "languageserver": {
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile", "Dockerfile"],
      "args": ["--stdio"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "flow": {
      "command": "flow",
      "args": ["lsp"],
      "filetypes": ["javascript", "javascriptreact"],
      "initializationOptions": {},
      "requireRootPattern": true,
      "settings": {},
      "rootPatterns": [".flowconfig"]
    },
    "golang": {
      "command": "/Users/docwhat/go/bin/gopls",
      "filetypes": ["go"],
      "initializationOptions": {},
      "trace.server": "verbose",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"]
    },
    "lua": {
      "command": "lua-lsp",
      "filetypes": ["lua"]
    }
  }
}
