#!/bin/bash

set -euo pipefail

unset RUBY_VERSION
unset RBENV_VERSION
unset GEM_HOME
unset GEM_PATH
export PATH='/usr/bin/:/bin:/usr/local/bin:/usr/sbin:/sbin:/usr/local/sbin'

if [ -x /opt/vagrant/bin/vagrant ]; then
  exec /opt/vagrant/bin/vagrant "$@"
elif [ -x /usr/local/bin/vagrant ]; then
  exec /usr/local/bin/vagrant "$@"
elif [ -x /usr/bin/vagrant ]; then
  exec /usr/bin/vagrant "$@"
else
  echo "Unable to locate vagrant." 1>&2
  exit 10
fi
