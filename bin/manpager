#!/bin/bash

set -euo pipefail

function pager() {
  if [ -t 1 ]; then
    if [[ $EDITOR == vim* ]] || [[ $EDITOR == nvim* ]]; then
      ${EDITOR} \
        -R \
        -c 'set ft=man ts=8 nonumber nolist nomodified nomodifiable' \
        -
    else
      "$PAGER"
    fi
  else
    # If we're piped, then use cat
    cat
  fi
}

exec col -bx | iconv -c | pager
