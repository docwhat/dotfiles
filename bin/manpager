#!/bin/bash

set -euo pipefail

function has_exe() {
  command -v "$1">/dev/null 2>&1
}

function pager() {
  if [ -t 1 ]; then
    if has_exe nvim; then
      nvim -R \
        -c 'set filetype=man shiftwidth=8 cmdheight=1 nonumber nolist nomodified nomodifiable' \
        -
              return
    fi

    if has_exe vim; then
      vim -R \
        -c 'set filetype=man shiftwidth=8 cmdheight=1 nonumber nolist nomodified nomodifiable' \
        -
              return
    fi

    "$PAGER"
  else
    "cat"
  fi
}

exec col -bx | iconv -c | pager
