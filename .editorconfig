# EditorConfig: http://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.md]
max_line_length = off
indent_size = 4
trim_trailing_whitespace = true

[*.rb]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[{*.yml,config/yamllint/config}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
vim_filetype = yaml

[{zsh/startup/*.zsh,zsh/startup/*.zshenv,zsh/startup/*.zprofile,zsh/functions/_*,zsh/plugins/*}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
vim_filetype = zsh

[{alexrc,eslintrc,prettierrc}]
vim_filetype = json
