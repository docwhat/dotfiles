# EditorConfig: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = 72
indent_size = 4

[*.rb]
indent_style = space
indent_size = 2

[*.py]
indent_size = 4
indent_style = space
max_line_length = 120

[{*.yaml,*.yml,config/yamllint/config}]
indent_style = space
indent_size = 2

[{zsh/startup/*.zsh,zsh/startup/*.zshenv,zsh/startup/*.zprofile,zsh/functions/_*,zsh/plugins/*}]
indent_style = space
indent_size = 2
