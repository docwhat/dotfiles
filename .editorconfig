# EditorConfig: http://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.md]
max_line_length = 72
indent_size = 4
trim_trailing_whitespace = true

[*.rb]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.py]
indent_size = 4
indent_style = space
max_line_length = 120
trim_trailing_whitespace = true

[{*.yaml,*.yml,config/yamllint/config}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[{zsh/startup/*.zsh,zsh/startup/*.zshenv,zsh/startup/*.zprofile,zsh/functions/_*,zsh/plugins/*}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
