# EditorConfig: http://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.md]
max_line_length = off
trim_trailing_whitespace = true

[*.rb]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{zsh,zshenv,zprofile}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
vim_filetype = zsh
